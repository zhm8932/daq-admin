if data.pagecount==0
    | 暂无数据
else
    each item in data.data
        -var isRecommend = true;
        each recommendId in recommendIds
            if item.id === recommendId
                -isRecommend = false;
        if item.id === articleId
            -isRecommend = false;
        if isRecommend
            li(data-id="#{item.id}")
                .check
                    input(type="checkbox")
                .list
                    .listTitle.clearfix
                        span.lt.title #{item.title}
                        //if (item.status == '1')
